lib/
  ├── main.dart                     # Точка входа в приложение
  ├── models/                       # Модели данных
  │   ├── device.dart               # Модель устройства
  │   └── oxygen_reading.dart       # Модель показаний кислорода
  ├── screens/                      # Экраны приложения
  │   ├── home_screen.dart          # Главный экран с показаниями
  │   ├── device_list.dart          # Список обнаруженных устройств
  │   └── settings_screen.dart      # Настройки приложения и уведомлений
  ├── services/                     # Сервисы
  │   ├── bluetooth_service.dart    # Сервис для работы с Bluetooth
  │   └── notification_service.dart # Сервис для уведомлений
  ├── help/                         # Документы в помощь для коректировок
  │   ├── Разрешения для Android    # Настройки для работы с Bluetooth  для Android 
  │   ├── Разрешения для iOS        # Настройки для работы с Bluetooth для iOS
  │   └── допинфа                   # Подсказка
  └── widgets/                      # Повторно используемые виджеты
      ├── device_card.dart          # Карточка устройства
      └── oxygen_gauge.dart         # Виджет для отображения показаний
